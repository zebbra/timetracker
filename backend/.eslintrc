{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "promise",
    "import",
    "standard",
    "node"
  ],
  "extends": [
    "standard",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "consistent-return": 1,
    "eol-last": 2,
    "func-style": [
      2,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "node/exports-style": [
      2,
      "module.exports"
    ],
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": [
          "expect.js",
          "jest-plugins",
          "proxyquire",
          "sinon"
        ]
      }
    ],
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": [
          "jest-environment-node"
        ]
      }
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "no-undefined": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-template": 2,
    "promise/valid-params": 0,
    "promise/no-nesting": 0,
    "semi": [
      2,
      "always"
    ],
    "standard/computed-property-even-spacing": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "double"
    ],
    "no-process-exit": 0
  }
}
