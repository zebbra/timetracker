{
  "name": "timetracker-loopoback-server",
  "version": "1.5.0",
  "main": "server/server.js",
  "description": "Backend server for zeiterfassung-medi software",
  "author": "Michael Baertschi",
  "engines": {
    "npm": ">=3",
    "node": "=10"
  },
  "scripts": {
    "lint": "eslint .",
    "deps": "yarn upgrade-interactive --latest",
    "start": "./node_modules/.bin/npm-run-all --parallel lint start:server",
    "start:server": "NODE_ENV=development DEBUG=app:*,-app:reporting:helpers node_modules/.bin/nodemon .",
    "start:server-prod": "NODE_ENV=production ./node_modules/.bin/npm-run-all --parallel cron:start start:prod",
    "start:prod": "NODE_ENV=production node .",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha -R spec test/**/*.test.js",
    "test:unit": "NODE_ENV=test DEBUG=app:error:* ./node_modules/.bin/mocha -R spec test/**/*.test.js",
    "posttest": "npm run lint",
    "db:migrate": "DEBUG=db:* node ./bin/automigrate.js",
    "db:update": "DEBUG=db:* node ./bin/autoupdate.js",
    "db:seed": "DEBUG=db:* node ./bin/seeddatabase.js",
    "cron:start": "DEBUG=cronjobs node ./bin/cronjobs.js",
    "cron:simulate:transition": "DEBUG=cronjobs node ./bin/simulateTransition.js",
    "db:backup": "DEBUG=* node bin/database/backup.js",
    "db:restore": "DEBUG=* node bin/database/restore.js"
  },
  "dependencies": {
    "async": "^3.1.0",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "helmet": "^3.21.2",
    "lodash": "^4.17.15",
    "loopback": "~3.23.0",
    "loopback-boot": "^3.3.1",
    "loopback-component-explorer": "^6.5.0",
    "loopback-connector-mongodb": "^5.2.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.31",
    "newrelic": "^6.2.0",
    "node-schedule": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "raven": "^2.6.4",
    "s3-client": "^4.4.2",
    "serve-favicon": "^2.5.0",
    "strong-error-handler": "^3.4.0",
    "tar-fs": "^2.1.0",
    "rimraf": "^3.0.2",
    "targz": "^1.0.1"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "expect.js": "^0.3.1",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "",
    "url": ""
  },
  "license": "MIT"
}
